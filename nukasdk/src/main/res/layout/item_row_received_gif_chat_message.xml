<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom">

        <ai.akun.nukasdk.chatbot.presentation.shared.ChatBotAvatarView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            tools:layout_height="40dp"
            tools:layout_width="40dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/gifChatMessageWidth"
            android:layout_height="@dimen/gifChatMessageHeight"
            android:layout_margin="@dimen/messageCardMargin"
            app:cardCornerRadius="20dp"
            app:cardElevation="@dimen/messageCardElevation">

                <ImageView
                    android:id="@+id/gif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

</LinearLayout>