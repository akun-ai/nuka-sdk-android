<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChatBotAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="colorControlNormal">@color/accentBlue</item>
    </style>

    <style name="NoConnectionMessage" />
    <style name="NoConnectionMessage.Container">
        <item name="android:background">#80000000</item>
    </style>
    <style name="NoConnectionMessage.Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Toolbar" />
    <style name="Toolbar.UserName">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Toolbar.UserStatus">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MessageBar" />
    <style name="MessageBar.EditText">
        <item name="android:padding">10dp</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/bg_rounded_edit_text</item>
    </style>
    <style name="MessageBar.ActionButton">
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ChatMessage" />
    <style name="ChatMessage.Action">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/bg_rounded_accent_blue</item>
    </style>

    <!-- Social network-->
    <style name="SocialNetwork" />
    <style name="SocialNetwork.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="SocialNetwork.Subtitle">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>