<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChatBotAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="colorControlNormal">@color/accentBlue</item>
    </style>

    <style name="Toolbar" />
    <style name="Toolbar.UserName">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Toolbar.UserStatus">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MessageBar" />
    <style name="MessageBar.EditText">
        <item name="android:padding">10dp</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/bg_rounded_edit_text</item>
    </style>
    <style name="MessageBar.ActionButton">
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ChatMessage" />
    <style name="ChatMessage.Action">
        <item name="android:color">@android:color/white</item>
        <item name="android:background">@color/accentBlue</item>
    </style>
</resources>